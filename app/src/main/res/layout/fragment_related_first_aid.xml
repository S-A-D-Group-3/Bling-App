<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.RelatedFirstAidFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:fontFamily="@font/open_sans"
        android:foregroundGravity="center_vertical"
        android:gravity="center"
        android:padding="10dp"
        android:text="Related First Aid: "
        android:textColor="@color/black"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btn_to_vital_signs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily="@font/open_sans"
                android:foreground="?android:attr/selectableItemBackground"
                android:foregroundGravity="center_vertical"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="· Vital Signs"
                android:textColor="#4d99f0"
                android:textSize="16dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_to_cold_compress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily="@font/open_sans"
                android:foreground="?android:attr/selectableItemBackground"
                android:foregroundGravity="center_vertical"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="· Cold Compress"
                android:textColor="#4d99f0"
                android:textSize="16dp"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_to_elevation_sling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/open_sans"
            android:foreground="?android:attr/selectableItemBackground"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="· Elevation Sling"
            android:textColor="#4d99f0"
            android:textSize="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_to_shock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/open_sans"
            android:foreground="?android:attr/selectableItemBackground"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="· Shock"
            android:textColor="#4d99f0"
            android:textSize="16dp"
            android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_to_rolled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/open_sans"
            android:foreground="?android:attr/selectableItemBackground"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="· Rolled Bandages"
            android:textColor="#4d99f0"
            android:textSize="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_to_broad_fold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/open_sans"
            android:foreground="?android:attr/selectableItemBackground"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="· Broadfold Bandages"
            android:textColor="#4d99f0"
            android:textSize="16dp"
            android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_to_arm_sling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/open_sans"
            android:foreground="?android:attr/selectableItemBackground"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="· Arm SLing"
            android:textColor="#4d99f0"
            android:textSize="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_to_pulse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/open_sans"
            android:foreground="?android:attr/selectableItemBackground"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="· Pulse"
            android:textColor="#4d99f0"
            android:textSize="16dp"
            android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_to_sling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/open_sans"
            android:foreground="?android:attr/selectableItemBackground"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="· Sling"
            android:textColor="#4d99f0"
            android:textSize="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_to_circulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/open_sans"
            android:foreground="?android:attr/selectableItemBackground"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="· Circulation"
            android:textColor="#4d99f0"
            android:textSize="16dp"
            android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_to_cpr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/open_sans"
            android:foreground="?android:attr/selectableItemBackground"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="· CPR"
            android:textColor="#4d99f0"
            android:textSize="16dp"
            android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">

        <!-- Style attributes -->
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/action_bar</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="counterTextAppearance">@style/HintText</item>


        <!-- Theme attributes -->
        <item name="android:textColorHint">@color/black</item>

        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/action_bar</item>

    </style>


    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">5sp</item>

    </style>


</resources>
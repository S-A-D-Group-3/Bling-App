<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/visual_button"
    tools:context=".Fragments.ToggleReadVisualFragment">

    <Button
        android:id="@+id/btn_view_visual"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/visual_button"
        android:text="View Visual"
        android:textAllCaps="false"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/btn_view_reader"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/read_button"
        android:text="View Reader"
        android:textAllCaps="false"
        android:visibility="gone" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Fragments.ViewReaderVisual.c5_1_ReadFragment">

    <!-- TODO: Update blank fragment layout -->
    <fragment
        android:id="@+id/fragment7"
        android:name="com.systemdict32.blingapp.Fragments.ReadFirstAidFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_c5_1_first_aid_manual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:textSize="18dp"
        android:fontFamily="@font/lato" />

    <TextView
        android:id="@+id/btn_to_fast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:fontFamily="@font/open_sans"
        android:foreground="?android:attr/selectableItemBackground"
        android:foregroundGravity="center_vertical"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="See F.A.S.T Guide"
        android:textColor="#4d99f0"
        android:textSize="18dp" />

</LinearLayout>